<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <!--    tools:context=".Recipe.mainFragment">-->


        <ImageView
            android:id="@+id/recipeMainImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="116dp"
            android:contentDescription="Photo by Dan Gold on Unsplash"
            android:scaleType="centerInside"
            android:src="@drawable/restaurant"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/recipeMainButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeMainText" />

        <TextView
            android:id="@+id/recipeMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:text="@string/recipeapp"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/recipeMainButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"

            android:text="@string/recipeMainButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recipeMainImage"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/recipeMainImage" />

        <!--    <include-->
        <!--        android:id="@+id/recipeToolbarDrawer"-->
        <!--        layout="@layout/recipe_toolbar_drawer"-->
        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent" />-->
</androidx.constraintlayout.widget.ConstraintLayout>
